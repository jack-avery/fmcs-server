token: {{ instance.1.relay_bot_token }}
address: {{ ansible_host }}
port: {{ mcs_base_port + (loop0 * 10) }}
rcon_addr: mcs-{{ instance.0.name }}
rcon_pass: {{ instance.1.rcon_pass }}
channel: {{ instance.0.relay_bot.channel }}
atl_manifest: "{{ inventory_hostname }}-{{ instance.0.name }}.zip"
is_whitelist: {{ true if 'whitelist' in instance.0 else false }}
poll_rate: {% if 'poll_rate' in instance.0.relay_bot %}{{ instance.0.relay_bot.poll_rate }}{% else %}{{ defaults.relay_bot.poll_rate }}{% endif %}

rcon_users:
{% for user in instance.0.relay_bot.rcon_users %}
  - {{ user }}
{% endfor %}
